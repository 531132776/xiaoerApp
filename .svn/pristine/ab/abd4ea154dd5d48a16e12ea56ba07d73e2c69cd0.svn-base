                        <mu-col span="12" lg="6" xl="6" md="12" sm="12" class="pt_pb10 pr_pl15" v-for="(item,index) in business" :key="index">
                            <div class="bg_fff p10">
                                <a @click="dealershop(item.id, item.name, item.brand != null ? item.brand.logo : '')" class="ablock">
