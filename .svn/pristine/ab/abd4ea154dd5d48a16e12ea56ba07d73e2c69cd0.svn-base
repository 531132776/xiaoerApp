<script>
import apiAll from '@/http/apiAll.js'
import Toast from 'muse-ui-toast'
    export default {
        data () {
            return {
                panel3: '',
                open:false,
                business: [],
                brandListAggregate:[],//品牌经销商列表
                brandIdList:[],
                cityList:[],
                cityId:'',
                firstLetterBrand:[],
                id:''
            }
        },
         created () {
            this.$store.state.showTopNav = true;//头部导航显示
            
            //获取字母及品牌商家
            this.getLetterList()
            //获取商家列表集合
            this.getPortalCompanyList(this.id);
            //
            this.getCityList()
        },
        methods:{
            //获取商家列表集合
            async getPortalCompanyList(){
                let data = {
                    cityId:this.cityId,
                    brandIdList:this.brandIdList,
                    pageSize:20,
                    currentPage:1
                }
                try{
                    let res = await apiAll.getCompanyList(data);
                    console.log(res)
                    if(res.data != null && res.data != undefined){
                        this.business = res.data
                    }
                }catch(e){
                    Toast.error({
                        message:'可能没有数据',
                        errorIcon:'warning',
                        position: 'top',
                        infoicon:'info'
                    })
                }
            },
            //获取字母及品牌商家
            async getLetterList(){
                try{
                    let params = await apiAll.getLetterBrandList({});
                    // console.log(params)
                    if(params != null && params != undefined){
                        this.brandListAggregate = params.data;
                        this.firstLetterBrand = params.data;
                        for(let i=0; i<params.data.length;i++){
                            let arr = [];
                            arr = params.data[i].brandList;
                            // console.log(arr)
                            for(let j=0;j<arr.length;j++){
                                this.brandIdList.push(arr[j].id);
                            }
                        }
                        
                    }
                }catch(e){
                    Toast.error({
                        message:'可能没有数据11',
                        errorIcon:'warning',
                        position: 'top',
                        infoicon:'info'
                    })
                }
            },
            //获取城市
            async getCityList(){
                try{
                let getCity = await apiAll.getCityList({});
                //  console.log(getCity);
                if(getCity.data != null && getCity.data !=undefined){
                    this.cityList = getCity.data;
                    let city = getCity.data.find(val => val.name =="广州")
                        this.cityId = city.id;
                    
                }

                }catch(e){
                this.$alert('请求错误!','提示',{
                    errorIcon: 'warning',
                        iconSize: 24,
                        width: '80%',
                        transition: 'scale',
                        okLabel: '确定',
                })
                }
            },
            toggle (panel,firstLetter) {
                this.panel3 = panel === this.panel3 ? '' : panel;
                // alert(firstLetter);
                let brandIdList = [];
                for(var i = 0;i < this.firstLetterBrand.length; i ++){
                    if(this.firstLetterBrand[i].firstLetter == firstLetter){
                        var brandList = this.firstLetterBrand[i].brandList;
                        console.log(brandList)
                        for(var j = 0;j < brandList.length; j ++){
                            
                            brandIdList.push(brandList[j].id);
                            this.brandIdList = brandIdList;
                        }
                    }
                }
            },
            selectBrand(id,brandName){
                // alert(id);
                this.id = id
                let fialVal = this.brandIdList.find(val => val.brandName == brandName);
                if(fialVal){
                    this.getPortalCompanyList(this.id)
                }
                
            },
            //商家主页
            dealershop(companyId,companyName,companyLogo){
                this.$router.push({
                    name: 'dealershop',
                    params:{
                        id:companyId,
                        name:companyName,
                        logo:companyLogo
                    }
                })
                // console.log(companyId)
            },
        }
    }
</script>