    <div class="distributor">
        <mu-row>
            <mu-col span="12">
                <mu-button full-width color="secondary" @click="open = !open">选择品牌经销商</mu-button>
            </mu-col>
        </mu-row>
        <!-- 商家列表 -->
        <section class="distributor_list pt10">
            <div class="distributor_details ">
                <div class="business_info">
